@model SxVMLogin

@section styles{
    <style>
        html, body {
            height: 100%;
        }

        body {
            margin-bottom: 0;
        }
    </style>
}

<div class="auth-page">
    <h2>Вход в аккаунт</h2>
    <br />

    <form method="post" action="@Url.Action("Login", "Account")" class="auth-page__form">

        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.Email) } })
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group">
            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = Html.DisplayNameFor(x => x.Password) } })
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <div class="form-group">
            <button class="btn btn-primary auth-page__full-btn" type="submit">Войти в аккаунт</button>
        </div>

        <div class="form-group">
            <div class="text-center">
                У Вас нет аккаунта?
            </div>
        </div>

        <div class="form-group">
            <a href="@Url.Action("Register", "Account")" class="btn btn-primary auth-page__full-btn">Регистрация</a>
        </div>

        <div class="form-group">
            <div class="alert alert-info">
                <div class="text-center">
                    <a href="#">Условия использования ресурса</a>
                </div>
            </div>
        </div>

    </form>
</div>

@section scripts{
    <script src="~/content/dist/js/jquery.validate.min.js"></script>
    <script src="~/content/dist/js/jquery.validate.unobtrusive.min.js"></script>
}
